        <div class="bookings-envelope">
          <div class="bookings-brewer col-xs-12 col-sm-4">
            <p>Cervejaria: <%= link_to booking.facility.name, facility_path(booking.facility) %></p>
            <p>EndereÃ§o: <%= booking.facility.address %></p>
          </div>

